generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(uuid())
  email       String      @unique
  password    String
  fullname    String
  invoices    Invoice[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Invoice {
  id          String     @id @default(uuid())
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  title       String
  issueDate   DateTime
  expiration  DateTime
  provider    String
  extracted   Boolean    @default(false)
  warranty    Warranty?
  attachments Attachment[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Warranty {
  id          String     @id @default(uuid())
  invoice     Invoice    @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  invoiceId   String     @unique
  duration    Int //DÃ­as o meses
  notes       String?
  validUntil  DateTime
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Attachment {
  id          String    @id @default(uuid())
  url         String
  mimeType    String
  fileName    String
  invoiceId   String
  invoice     Invoice   @relation(fields: [invoiceId], references: [id],      onDelete: Cascade)
  createdAt   DateTime  @default(now())
  }
