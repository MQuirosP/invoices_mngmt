generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  fullname  String
  invoices  Invoice[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Invoice {
  id         String    @id @default(uuid())
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  title      String
  issueDate  DateTime
  expiration DateTime
  provider   String
  fileUrl    String //URL del archivo en la nube
  fileType   String //PDF, XML, JPG
  extrated   Boolean   @default(false)
  warranty   Warranty?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Warranty {
  id         String   @id @default(uuid())
  invoice    Invoice  @relation(fields: [invoiceId], references: [id])
  invoiceId  String   @unique
  duration   Int //DÃ­as o meses
  notes      String?
  validUntil DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
